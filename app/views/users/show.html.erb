<div class="profile">
  <div class="container mt-2">
    <div class="profile-row row justify-content-center">
      <div class="col-md-8">
        <div class="card profile-card">
          <% if @user.profile_photo.present? %>
            <%= image_tag @user.profile_photo, class: 'card-img-top profile-image', alt: 'Profile Photo' %>
          <% else %>
            <%= image_tag "default_profile.png", class: 'card-img-top profile-image', alt: 'Profile Photo' %>
          <% end %>
          <div class="card-body text-center">
            <h5 class="card-title profile-name"><%= "#{@user.first_name} #{@user.last_name}" %></h5>
            <p class="card-text profile-bio">This is your profile quiz master!</p>
            <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary profile-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
