<center>
  <div class="card" style="width: 20rem">
    <h2 class="card-header">Sign up</h2>
    <% controller.class == Admin::RegistrationsController ? url = admin_path : url = user_registration_path %>
    <%= form_for(resource, as: resource_name, url: url) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: 'First name' %>
      </div>
      <div class="field">
        <%= f.text_field :last_name, autofocus: true, placeholder: 'Last name' %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: 'Email' %>
      </div>
      <div class="field">
        <% placeholder = 'Password' %>
        <% if @minimum_password_length %>
          <% placeholder += ' (' + @minimum_password_length.to_s + ' chars min)' %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: placeholder %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: 'Password Confirmation' %>
      </div>
      <%= f.hidden_field :role, value: ( controller.class == Admin::RegistrationsController ? 'admin' : 'participant' ) %>
      <br>
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</center>
