<%= link_to 'Create new user', new_admin_user_path, class: 'btn btn-dark mt-2 mr-2 float-right' %>
<h2 class="text-center mt-2">All Users</h2>
<div class="container-fluid">
  <div class="row justify-content-center">
    <table class = "table table-striped table-hover mt-2">
      <thead class="bg-dark">
        <tr>
          <th class="text-light"><%= link_to "First name", { sort: :first_name }, class: 'text-light' %></th>
          <th><%= link_to "Last name", { sort: :last_name }, class: 'text-light' %></th>
          <th><%= link_to "Email", { sort: :email }, class: 'text-light' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="hover-overlay">
            <td>
              <% if user.admin? %>&#128273;<% end %>
              <%= user.first_name %>
            </td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to '&#x270D;'.html_safe, edit_admin_user_path(user), class: 'btn btn-info' %>
              <%= link_to '&#x2716;'.html_safe, admin_user_path(user), data: {
          turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
