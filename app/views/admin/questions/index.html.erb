<%= link_to '&plus;'.html_safe + ' Create new', new_admin_question_path, class: 'btn btn-dark mt-2 mr-2 float-right border' %>
<h2 class="text-center">Questions</h2>
<div class="container-fluid pl-0 pr-0">
  <%= search_form_for [:admin, @q] do |f| %>
    <%= render 'filter', f: f %>
  <% end %>
  <div class="row justify-content-center body-row">
    <table class = "table table-striped table-hover mt-2">
      <thead class="bg-dark">
        <tr class="h-50 body-row">
          <th><%= sort_link(@q, :title) %></th>
          <th><%= sort_link(@q, :description) %></th>
          <th><%= sort_link(@q, :score) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @questions %>
        <tr class="h-50 body-row bg-light">
          <td class="col-md-12 mt-2 float-right">
            <nav aria-label="Page navigation">
              <ul class="pagination float-right">
                <%= paginate @questions %>
              </ul>
            </nav>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
