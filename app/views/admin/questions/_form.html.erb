<%= render 'shared/errors', model: question %>
<div class="form ml-2">
  <%= form_with model: [:admin, question] do |form| %>
    <div class="field">
      <%= form.text_field :title, placeholder: 'Title', class: 'form-input' %>
    </div>
    <div class="field">
      <%= form.text_area :description, placeholder: 'Description', class: 'form-input' %>
    </div>
    <div class="field">
      <%= form.number_field :score, placeholder: 'Score' %>
    </div>
    <div class="field">
      <h2>Options</h2>
      <%= form.fields_for :question_options do |options_form| %>
        <%= render 'question_option_fields', f: options_form, object: options_form.object %>
      <% end %>
      <%= link_to_add_fields "Add Option", form, :question_options %>
    </div>
    <div class="field action">
      <%= form.submit class: 'btn btn-dark' %>
    </div>
  <% end %>
</div>
